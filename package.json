{
  "name": "monument-ui",
  "version": "1.1.1",
  "description": "Add 3D effect to React elements",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/monument-ui.cjs.js",
  "module": "lib/monument-ui.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build",
    "build": "rollup -c",
    "watch": "npm run build -- --watch",
    "lint": "eslint 'src/**/*.{tsx,ts}' --fix",
    "prettier": "prettier --write 'src/**/*.{tsx,ts}'",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy-storybook": "storybook-to-ghpages"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/monument-ui.git"
  },
  "keywords": [
    "Monument",
    "UI",
    "React",
    "library",
    "3D",
    "depth"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/monument-ui/issues"
  },
  "homepage": "https://github.com/JB1905/monument-ui#readme",
  "dependencies": {
    "color": "^3.1.2",
    "styled-components": "^5.0.1",
    "to-px": "^1.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@storybook/addon-knobs": "^5.3.17",
    "@storybook/addon-links": "^5.3.17",
    "@storybook/addons": "^5.3.17",
    "@storybook/react": "^5.3.17",
    "@storybook/storybook-deployer": "^2.8.3",
    "@types/color": "^3.0.1",
    "@types/react": "^16.9.25",
    "@types/styled-components": "^5.0.1",
    "@typescript-eslint/parser": "^2.24.0",
    "babel-loader": "^8.1.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "gh-pages": "^2.2.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^2.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.0",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.26.0",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{tsx,ts}": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
