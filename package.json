{
  "name": "monument-ui",
  "version": "1.1.0",
  "description": "Add 3D effect to React elements",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/monument-ui.min.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build:dev && npm run build",
    "build": "webpack --env build",
    "build:dev": "webpack --env dev",
    "watch": "npm run build -- --watch",
    "watch:dev": "npm run build:dev -- --watch",
    "lint": "eslint 'src/**/*.{tsx,ts}' --fix",
    "prettier": "prettier --write 'src/**/*.{tsx,ts}'",
    "deploy": "gh-pages -d demo/build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/monument-ui.git"
  },
  "keywords": ["Monument", "UI", "React", "library", "3D", "depth"],
  "bugs": {
    "url": "https://github.com/JB1905/monument-ui/issues"
  },
  "homepage": "https://github.com/JB1905/monument-ui#readme",
  "dependencies": {
    "color": "^3.1.2",
    "styled-components": "^4.4.1",
    "to-px": "^1.1.0"
  },
  "devDependencies": {
    "@types/color": "^3.0.1",
    "@types/react": "^16.9.17",
    "@types/styled-components": "^4.4.1",
    "@typescript-eslint/parser": "^2.14.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "gh-pages": "^2.1.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{tsx,ts}": ["npm run prettier", "npm run lint", "git add"]
  }
}
